<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:id="@id/TableFirstRow" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TableRow android:layout_marginTop="5.0dip">
            <RelativeLayout android:layout_height="wrap_content" android:layout_weight="1.0">
                <RatingBar android:id="@id/rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="5" android:numStars="5" android:isIndicator="true" style="?android:ratingBarStyleSmall" />
            </RelativeLayout>
            <TextView android:id="@id/text_date" android:layout_height="wrap_content" android:text="date" android:layout_weight="3.0" style="@style/MyNormalTextStyle" />
            <TextView android:id="@id/text_event" android:layout_height="wrap_content" android:text="event" android:layout_weight="3.0" style="@style/MyNormalTextStyle" />
        </TableRow>
    </TableLayout>
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/TableFirstRow">
        <TableRow android:layout_marginBottom="5.0dip">
            <TextView android:id="@id/text_id" android:layout_height="wrap_content" android:text="id" android:layout_weight="1.0" style="@style/MyNormalTextStyle" />
            <TextView android:id="@id/text_name1" android:layout_height="wrap_content" android:text="white" android:layout_weight="3.0" style="@style/MyNormalTextStyle" />
            <TextView android:id="@id/text_name2" android:layout_height="wrap_content" android:text="black" android:layout_weight="3.0" style="@style/MyNormalTextStyle" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
